{
    "manifest_version": 2,
    "name": "Visu",
    "version": "0.0.1",
    "description": "leave the github like its IDE.",

    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "page_action": {
        "default_icon": {
            "19" : "icon19.png",
            "38" : "icon38.png"
        },
        "default_title": "Visu",
        "default_popup": "popup.html"
    },

    "permissions": [
        "fontSettings",
        "tabs",
        "<all_urls>",
        "declarativeContent",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts": [ {
        "js": [ "inject/jquery.js"],
        "css": [ "inject/better.css" ],
        "matches": [ "https://*.github.com/*" ]
    } ]
}
